            margin-bottom: 20px;
            outline: none;
        }

        .contact-search::placeholder {
            color: #bdc3c7;
        }

        .contacts-list {
            flex-grow: 1;
            overflow-y: auto;
        }

        .contact {
            display: flex;
            align-items: center;
            padding: 12px;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.2s;
            margin-bottom: 8px;
        }

        .contact:hover, .contact.active {
            background-color: #34495e;
        }

        .contact-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #1abc9c;
